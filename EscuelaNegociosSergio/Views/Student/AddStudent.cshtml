@using EscuelaNegociosSergio.Models
@model Student

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-md-3">
            <h3>Add Student</h3>
            <form asp-controller="Student" asp-action="AddStudent" method="post">
                <div class="form-group">
                    <label asp-for="StudentName">Student Name</label>
                    <input asp-for="StudentName" class="form-control" />
                </div>
                <br />
                <div class="text-center">
                    <a asp-controller="Student" asp-action="AllStudent" class="btn btn-secondary">Back to Students</a> 
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>